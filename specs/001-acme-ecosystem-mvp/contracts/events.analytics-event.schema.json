{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "com.ecosystem.analytics.event.v1",
  "title": "Ecosystem Event Envelope (Analytics)",
  "type": "object",
  "required": [
    "eventName",
    "eventId",
    "occurredAt",
    "journeyId",
    "userEcosystemId",
    "schemaVersion",
    "payload"
  ],
  "properties": {
    "eventName": {
      "type": "string",
      "description": "com.ecosystem.{domain}.{entity}.{action}"
    },
    "eventId": { "type": "string" },
    "occurredAt": { "type": "string", "format": "date-time" },
    "journeyId": { "type": "string" },
    "userEcosystemId": { "type": "string" },
    "schemaVersion": { "type": "string", "pattern": "^v[0-9]+$" },
    "payload": {
      "type": "object",
      "additionalProperties": true
    }
  }
}


