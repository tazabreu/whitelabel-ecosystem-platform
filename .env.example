# ================================
# ACME Ecosystem Platform - Environment Variables
# ================================
# Copy this file to .env and fill in the values for local development.

# ----------------
# Environment
# ----------------
NODE_ENV=development
DEPLOYMENT_ENVIRONMENT=local

# ----------------
# Feature Flags
# ----------------
FEATURE_FLAG_CREDIT_CARDS_PRE_APPROVED_OFFERS=true

# ----------------
# Service URLs (local)
# ----------------
WEB_BFF_URL=http://localhost:8080
USER_SERVICE_URL=http://localhost:8081
CREDIT_CARD_SERVICE_URL=http://localhost:8082
ANALYTICS_SERVICE_URL=http://localhost:8090

# ----------------
# PostgreSQL - User Service
# ----------------
USER_DB_HOST=localhost
USER_DB_PORT=5432
USER_DB_NAME=user_db
USER_DB_USER=postgres
USER_DB_PASSWORD=postgres

# ----------------
# PostgreSQL - Credit Card Service
# ----------------
CREDIT_CARD_DB_HOST=localhost
CREDIT_CARD_DB_PORT=5433
CREDIT_CARD_DB_NAME=credit_card_db
CREDIT_CARD_DB_USER=postgres
CREDIT_CARD_DB_PASSWORD=postgres

# ----------------
# PostgreSQL - Analytics Service
# ----------------
ANALYTICS_DB_HOST=localhost
ANALYTICS_DB_PORT=5434
ANALYTICS_DB_NAME=analytics_db
ANALYTICS_DB_USER=postgres
ANALYTICS_DB_PASSWORD=postgres

# ----------------
# Redpanda / Kafka
# ----------------
KAFKA_BROKERS=localhost:9092
KAFKA_SCHEMA_REGISTRY_URL=http://localhost:8081

# ----------------
# OpenTelemetry (vendor-neutral)
# ----------------
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=ecosystem-service
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=local,service.version=0.1.0

# ----------------
# Splunk HEC (configure when ready)
# ----------------
SPLUNK_HEC_URL=
SPLUNK_HEC_TOKEN=
SPLUNK_SOURCE=ecosystem
SPLUNK_SOURCETYPE=_json
SPLUNK_INDEX=main

# ----------------
# Demo Auth (MVP only)
# ----------------
DEMO_AUTH_SECRET=demo-secret-change-in-prod
